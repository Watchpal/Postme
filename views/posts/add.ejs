<form action="/posts" method="POST" class="mt-3">
  <fieldset>
    <legend>Add new Post</legend>
    <div class="form-group">
      <label for="exampleInputPassword1" class="form-label mt-4">Title</label>
      <input type="text" class="form-control" name="title" id="exampleInputPassword1" placeholder="Title">
    </div>
    <div class="form-group">
      <label for="exampleSelect1" class="form-label mt-4">Select type of your Post</label>
      <select class="form-select" name="status" id="exampleSelect1">
        <option>Public</option>
        <option>Private</option>
      </select>
    </div>
    <div class="form-group">
      <label for="exampleTextarea" class="form-label mt-4">Example textarea</label>
      <textarea class="form-control" name="body" id="body" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
  </fieldset>
</form>